
@{
    ViewBag.Title = "New";
}

<h2>New Rental Form</h2>

<form id="newRentalForm">
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input id="customer" type="text" value="" class="form-control typeahead" data-rule-validCustomer="true" required />
        </div>
    </div>

    <div class="form-group">
        <label>Movie</label>
        <div class="tt-container">
            <input id="movie" type="text" value="" class="form-control typeahead" data-rule-validMovies="true"/>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="movies" class="list-group"></ul>
        </div>
    </div>

    <button class="btn btn-primary">Save</button>
</form>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            var vm = {
                movieIds: []
            };

            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#customer').typeahead({
                minLength: 3,
                highlight: true
            },
            {
                name: 'customers',
                limit : 50,
                display: 'name',
                source: customers
            }).on("typeahead:select", function (event, customer) {
                vm.customerId = customer.id;
            });

            $("#movie").typeahead({
                minLength: 3,
                highlight: true
            },
            {
                name: "movies",
                limit: 50,
                display: "name",
                source: movies
            }).on("typeahead:select", function (event, movie) {
                $("#movies").append("<li class='list-group-item'>" + movie.name + "</li>");
                $("#movie").typeahead("val", "");
                vm.movieIds.push(movie.id);

            });

            $.validator.addMethod("validCustomer", function () {
                return vm.customerId && vm.customerId != 0;
            }, "Please select a valid customer.");

            $validatos.addMethod("validMovies", function () {
                return vm.movieIds && vm.movieIds.length > 0;
            }, "Please select at least one movie. ");

            var validator = $("#newRentalForm").validate({
                submitHandler: function () {
                    $.ajax({
                        method: "POST",
                        url: "/api/rentals",
                        data: vm
                    })
                    .done(function () {
                        $("#customer").typeahead("val", "");
                        $("#movie").typeahead("val", "");
                        $("#movies").empty();
                        toastr.success("Rentals successfully recorded.");
                        vm = {
                            movieIds: []
                        };

                        validator.resetForm();
                    })
                    .fail(function () {
                        toastr.error("Something unexpected happened.");
                    });

                    return false;
                }
            });
        });
    </script> 
}

